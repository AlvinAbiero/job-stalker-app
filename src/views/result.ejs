<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css" />
    <!-- Add Bootstrap for styling -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container mt-5 mb-5">
      <div class="row">
        <div class="col-md-10 offset-md-1">
          <div class="card">
            <div class="card-header bg-primary text-white">
              <h1 class="text-center">Profile Analysis</h1>
            </div>
            <div class="card-body">
              <div class="profile-header mb-4">
                <h2><%= profile.name %></h2>
                <p class="lead"><%= profile.headline %></p>
                <p><i class="bi bi-geo-alt"></i> <%= profile.location %></p>
              </div>

              <!-- Profile Score -->
              <div class="score-section mb-4">
                <h3>Candidate Score: <%= profile.score %>/100</h3>
                <div class="progress mb-3">
                  <div
                    class="progress-bar <%= profile.score >= 80 ? 'bg-success' : profile.score >= 60 ? 'bg-info' : profile.score >= 40 ? 'bg-warning' : 'bg-danger' %>"
                    role="progressbar"
                    style="width: <%= profile.score %>%"
                    aria-valuenow="<%= profile.score %>"
                    aria-valuemin="0"
                    aria-valuemax="100"
                  ></div>
                </div>
                <div
                  class="alert <%= profile.score >= 80 ? 'alert-success' : profile.score >= 60 ? 'alert-info' : profile.score >= 40 ? 'alert-warning' : 'alert-danger' %>"
                >
                  <h4>Analysis:</h4>
                  <p><%= profile.analysis %></p>
                </div>
              </div>

              <!-- Summary -->
              <div class="profile-section mb-4">
                <h3>Summary</h3>
                <div class="card">
                  <div class="card-body">
                    <p><%= profile.about %></p>
                  </div>
                </div>
              </div>

              <!-- Experience -->
              <div class="profile-section mb-4">
                <h3>Experience</h3>
                <% if (profile.experience && profile.experience.length > 0) { %>
                <div class="list-group">
                  <% profile.experience.forEach(function(exp) { %>
                  <div class="list-group-item">
                    <h5 class="mb-1"><%= exp.title %></h5>
                    <p class="mb-1"><strong><%= exp.company %></strong></p>
                    <small class="text-muted"><%= exp.duration %></small>
                  </div>
                  <% }); %>
                </div>
                <% } else { %>
                <p class="text-muted">No experience information found.</p>
                <% } %>
              </div>

              <!-- Education -->
              <div class="profile-section mb-4">
                <h3>Education</h3>
                <% if (profile.education && profile.education.length > 0) { %>
                <div class="list-group">
                  <% profile.education.forEach(function(edu) { %>
                  <div class="list-group-item">
                    <h5 class="mb-1"><%= edu.school %></h5>
                    <p class="mb-1"><%= edu.degree %></p>
                    <small class="text-muted"><%= edu.years %></small>
                  </div>
                  <% }); %>
                </div>
                <% } else { %>
                <p class="text-muted">No education information found.</p>
                <% } %>
              </div>

              <!-- Skills -->
              <div class="profile-section mb-4">
                <h3>Skills</h3>
                <% if (profile.skills && profile.skills.length > 0) { %>
                <div class="skills-container">
                  <% profile.skills.forEach(function(skill) { %>
                  <span class="badge bg-secondary me-2 mb-2"><%= skill %></span>
                  <% }); %>
                </div>
                <% } else { %>
                <p class="text-muted">No skills information found.</p>
                <% } %>
              </div>

              <!-- Recommendations -->
              <div class="profile-section">
                <h3>Recommendations</h3>
                <p><%= profile.recommendations %> recommendation(s)</p>
              </div>
            </div>
            <div class="card-footer">
              <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                <a href="/" class="btn btn-primary">Analyze Another Profile</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
  </body>
</html>
