# Server configuration
PORT=3000
NODE_ENV=development

# Puppeteer configuration
HEADLESS=true
# PUPPETEER_EXECUTABLE_PATH=/path/to/chrome # Uncomment and set this if you have a custom Chrome installation
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=false
SCREENSHOT_DIR=screenshots
# Session secret (change this to a random string in production)
SESSION_SECRET=job-stalker-secret-key-change-me-in-production

# Security
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100

# Basic auth (optional)
# Set to true to enable basic username/password protection
ENABLE_BASIC_AUTH=false
BASIC_AUTH_USERNAME=admin
BASIC_AUTH_PASSWORD=password123

# LinkedIn Credentials (Optional - if you want to store default credentials)
# LINKEDIN_EMAIL=your-email@example.com
# LINKEDIN_PASSWORD=your-password